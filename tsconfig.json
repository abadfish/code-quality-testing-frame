{
    "compilerOptions": {
    "module": "commonjs",
    "moduleResolution": "node",
    "noImplicitAny": true,
    "removeComments": true,
    "preserveConstEnums": true,
    "sourceMap": true,
    "outDir": "dist",
    "allowJs": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true
    },
    "include": ["src/**/*.ts"],
    "exclude": ["dist"],
    "ts-node": {  
        "files": true,
        "compilerOptions": {
            "module": "commonjs"
        }
    }
}